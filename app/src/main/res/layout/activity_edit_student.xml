<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditStudentActivity">

    <TextView
        android:id="@+id/edit_student_phone_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Checked:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/edit_student_checked_cb"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edit_student_phone_title"
        app:layout_constraintTop_toBottomOf="@id/edit_student_phone_title" />

    <ImageView
        android:id="@+id/edit_student_image"
        android:layout_width="190dp"
        android:layout_height="194dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/student_avatar" />

    <TextView
        android:id="@+id/edit_student_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Name:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintStart_toStartOf="@id/edit_student_image"
        app:layout_constraintTop_toBottomOf="@id/edit_student_image" />

    <EditText
        android:id="@+id/edit_student_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_student_name_title"
        app:layout_constraintStart_toEndOf="@+id/edit_student_name_title"
        app:layout_constraintTop_toTopOf="@+id/edit_student_name_title" />

    <TextView
        android:id="@+id/edit_student_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ID:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/edit_student_name_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_student_name_title" />


    <EditText
        android:id="@+id/edit_student_id_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_student_id_title"
        app:layout_constraintStart_toEndOf="@+id/edit_student_id_title"
        app:layout_constraintTop_toTopOf="@+id/edit_student_id_title"
        app:layout_constraintVertical_bias="0.5" />


    <TextView
        android:id="@+id/edit_student_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Phone:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/edit_student_id_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_student_id_title" />

    <EditText
        android:id="@+id/edit_student_phone_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_student_phone_title"
        app:layout_constraintStart_toEndOf="@+id/edit_student_phone_title"
        app:layout_constraintTop_toTopOf="@+id/edit_student_phone_title" />


    <CheckBox
        android:id="@+id/edit_student_checked_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-8dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/edit_student_phone_title2"
        app:layout_constraintTop_toTopOf="@+id/edit_student_phone_title2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/edit_student_cancel_btn"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_student_delete_btn"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.5"
            android:text="Delete"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_student_save_btn"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.5"
            android:text="Save"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>